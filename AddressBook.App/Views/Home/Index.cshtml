@{
    ViewBag.Title = "Home Page";
}
@section scripts{
    <script src="~/Scripts/Pages/contact.js"></script>
}
<div id="ContactApp" class="container" style="margin-top: 15px;">
    <div ng-controller="ContactController" id="glavni">

        <form class="form-inline text-center">
            <div class="row">
                <div class="form-group">
                    <input type="text" class="form-control forma" placeholder="Search Term ...">
                </div>
                <div class="form-group">
                    <div class="btn-group">
                        <button type="submit" class="btn btn-default">Search</button>
                        <button type="submit" class="btn btn-danger">Reset</button>
                        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModalAdd" ng-click="add()">New Contact</button>
                        <a ng-click="test()">AAAAAAAAAAAAAA</a>
                    </div>
                </div>
            </div>
            <div class="radio form-group">
                <label class="radio-inline"><input type="radio" name="optradio" value="1">First Name</label>
                <label class="radio-inline"><input type="radio" name="optradio" value="2">Last Name</label>
                <label class="radio-inline"><input type="radio" name="optradio" value="3">Contact Group / Tag</label>
            </div>
        </form>

        @*DODAVANJE NOVOG KONTAKTA*@
        @{Html.RenderPartial("AddNewContact");}

    </div>
</div>